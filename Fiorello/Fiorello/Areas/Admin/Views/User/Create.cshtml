@model RegisterVM
<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create User</h4>

                <form class="forms-sample" method="post">
                    <div class="form-group">
                        <label asp-for="UserName" for="exampleInputName1"></label>
                        <input asp-for="UserName" class="form-control">
                        <span asp-validation-for="UserName"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FullName" for="exampleInputName1"></label>
                        <input asp-for="FullName" type="text" class="form-control">
                        <span asp-validation-for="FullName"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Email" for="exampleInputName1"></label>
                        <input asp-for="Email" type="text" class="form-control">
                        <span asp-validation-for="Email"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password" for="exampleInputName1"></label>
                        <input asp-for="Password" type="text" class="form-control">
                        <span asp-validation-for="Password"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ConfirmPassword" for="exampleInputName1"></label>
                        <input asp-for="ConfirmPassword" type="text" class="form-control">
                        <span asp-validation-for="ConfirmPassword"></span>
                    </div>

                    @*<select name="Role"  class="form-select w-100 p-2 mb-4 text-center" aria-label="Default select example">
                            <option selected>--Category--</option>

                        @foreach (string item in ViewBag.Role)
                            {
                                <option value="@item">@item</option>


                            }
                        </select>*@

                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <button class="btn btn-light" asp-controller="Service" asp-action="Index">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
